---
import ArticleMeta from "./ArticleMeta.astro";
import CommentBadge from "./CommentBadge.astro";

// 1. 扩展 Props 接口，使其与第一个组件的功能保持一致
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  authorName: string;
  avatarUrl: string;
  date: string;
  comments: number;
  url: string;
  tag: "dive" | "note";
}

const { title, description, imageUrl, authorName, avatarUrl, date, comments, url, tag } = Astro.props;

// 2. 引入动态样式逻辑，根据 tag 切换主题和渐变
const tagInfo = {
  dive: {
    text: "探索",
    className: "badge-warning",
    theme: "abyss", // 深色主题
    gradient: "bg-gradient-to-br from-slate-900 via-indigo-950 to-black",
  },
  note: {
    text: "随笔",
    className: "badge-info",
    theme: "wireframe", // 浅色主题
    gradient: "bg-gradient-to-br from-yellow-100 via-orange-200 to-red-200",
  },
};

const currentTheme = tagInfo[tag].theme;
const currentGradient = tagInfo[tag].gradient;
---

{/* 3. 采用与第一个组件完全相同的 HTML 结构和样式类 */}
<a
  href={url}
  class="card shadow-xl transition-shadow duration-300 hover:shadow-2xl flex flex-col lg:flex-row overflow-hidden group"
  data-theme={currentTheme}
>
  {/* 左侧大图 */}
  <figure class="w-full lg:w-2/5 h-64 lg:h-auto flex-shrink-0">
    <img
      src={imageUrl}
      alt={title}
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
    />
  </figure>
  {/* 右侧内容 */}
  <div
    class={`card-body w-full lg:w-3/5 p-6 lg:p-8 flex flex-col text-base-content ${currentGradient}`}
  >
    {/* 内容区域，使用 flex-col 使其可以垂直排列 */}
    <div class="flex-grow">
      {/* 标签 */}
      <div class={`badge badge-outline mb-3 ${tagInfo[tag].className}`}>
        {tagInfo[tag].text}
      </div>

      {/* 标题 - 添加了 hover 效果 */}
      <h3
        class="card-title text-2xl lg:text-3xl mb-3 leading-tight group-hover:text-primary transition-colors duration-300"
      >
        {title}
      </h3>
      {/* 介绍 - 统一为 line-clamp-3 */}
      <p class="text-base text-base-content/80 line-clamp-3 leading-relaxed mb-4">
        {description}
      </p>
    </div>
    {/* 信息 - 使用 mt-auto 推到底部 */}
    <div class="card-actions justify-between items-center mt-auto">
      {/* 4. 使用导入的子组件来显示作者和评论信息 */}
      <ArticleMeta authorName={authorName} date={date} avatarUrl={avatarUrl} />
      <CommentBadge count={comments} />
    </div>
</div>
</a>